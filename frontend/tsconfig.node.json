{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "composite": true,
        "outDir": "./dist-node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["vite.config.ts"]
}
